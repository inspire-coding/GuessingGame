<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/gameFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.inspirecoding.guessinggame.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <dialog
        android:id="@+id/changePlayerDialogFragment"
        android:name="com.inspirecoding.guessinggame.ui.ChangePlayerDialogFragment"
        android:label="ChangePlayerDialogFragment" />
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.inspirecoding.guessinggame.ui.GameFragment"
        android:label="GameFragment" >
        <action
            android:id="@+id/action_gameFragment_to_changePlayerDialogFragment"
            app:destination="@id/changePlayerDialogFragment" />
    </fragment>
</navigation>